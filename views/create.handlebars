<div class="container-fluid">
  <div class="row">
    <div class="header col-xs-12">
        <h2><i class="fa fa-beer" aria-hidden="true"></i> Create A Crawl</h2>
    </div>


    <section class="col-md-6 col-md-offset-3">
      <form class="createForm">

        <div class="form-group">
          <label for="name">Name *</label>
          <input type="text" class="name form-control" id="name">
        </div>

        <div class="form-group">
          <label for="name">Start Date *</label>
          <div class="input-group date">
              <input type="text" class="datepicker form-control" value="">
              <div class="input-group-addon">
                  <span class="glyphicon glyphicon-th"></span>
              </div>
          </div>
        </div>

        <div class="form-group">
          <label for="name">Start Time *</label>
          <div class="input-group date">
              <input type="text" class="start form-control timepicker">
              <div class="input-group-addon">
              <span class="fa fa-clock-o"></span>
              </div>
          </div>
        </div>

        <div class="form-group">
          <label for="test">What Breweries Interest You *</label>
        </div>

        {{#each brews}}
            <div data-breweryID='{{this._id}}' class="brewery col-xs-4 col-md-3">
              <img src="{{this.logo}}" />
            </div>
        {{/each}}

        <div class="col-xs-12">
        <button type="submit" class="submit btn btn-primary submit-new-crawl-button">CREATE</button>
        </div>
      </form>
    </section>
  </div>
</div>

{{#section 'scripts'}}
<script src="js/main.js"></script>
{{/section}}
